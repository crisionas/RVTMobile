<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RVTMobileAPP.Views.ContactPage"
             Title="RVT | Contact">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="30" HorizontalOptions="Fill">
            <Label Text="Contact" Style="{StaticResource TitleStyle}" FontAttributes="Bold"/>
            <Image Source="message.png" WidthRequest="100" HeightRequest="100"/>
            <Entry x:Name="Name" TextColor="Black" PlaceholderColor="Black" BackgroundColor="AliceBlue" MaxLength="20" WidthRequest="1" Placeholder="Numele tău"/>
            <Entry x:Name="Email" TextColor="Black" PlaceholderColor="Black" BackgroundColor="AliceBlue" Placeholder="Adresa de email"/>
            <Editor x:Name="Message" Placeholder="Mesajul tău" PlaceholderColor="Black" TextColor="Black" BackgroundColor="AliceBlue" HeightRequest="100"/>
            <Button Clicked="Send_clicked" Text="Trimite" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>