<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RVTMobileAPP.Views.LoginPage"
             Title="Logare">
    <ContentPage.Content>
        <StackLayout  Spacing="20" Margin="45" VerticalOptions="Center" >
            <Image Source="ic_login.png" WidthRequest="150" HeightRequest="150"/>
            <Entry x:Name="IDNPEntry" MaxLength="13" Placeholder="IDNP"   />
            <Entry x:Name="PasswordEntry" Placeholder="Parola" IsPassword="True" />
            <Button Text="LOGARE"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>